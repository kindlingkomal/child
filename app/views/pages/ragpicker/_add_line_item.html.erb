  <tr>
    <th style='width: 200px'> Name </th>
    <th style='width: 100px'>Required</th>
    <th style='width: 100px'>Data type</th>
    <th>Description</th>
  </tr>
  <tr>
    <td>token </td>
    <td>Y</td>
    <td>login token</td>
  </tr>
  <tr>
    <td>line_item[category_id]</td>
    <td>Y</td>
    <td>integer</td>
    <td>id of category</td>
  </tr>
  <tr>
    <td>line_item[pick_up_id]</td>
    <td>Y</td>
    <td>integer</td>
    <td>id of pick-up</td>
  </tr>
  <tr>
    <td>line_item[quantity]</td>
    <td>Y</td>
    <td>float</td>
    <td>Quantity</td>
  </tr>
</table>

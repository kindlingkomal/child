.container.topnav
  / Brand and toggle get grouped for better mobile display
  .navbar-header
    %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to root_path, class: 'navbar-brand topnav' do 
      = image_tag 'logo-stv.png'
  / Collect the nav links, forms, and other content for toggling
  #bs-example-navbar-collapse-1.collapse.navbar-collapse
    %ul.nav.navbar-nav.navbar-right
      %li
        = link_to 'Home', root_path
      %li
        = link_to 'About Us', about_us_path
      %li
        %a.scrollto{:name => "pad2"} How it works
      %li
        %a{:href => "#"} Contact Us
      %li
        - if current_user
          = link_to 'SIGN OUT', destroy_user_session_path, method: :delete, class: 'btn'
        - else
          %a.btn{"data-dismiss" => "model", "data-target" => "#sign-log", "data-toggle" => "modal", :href => "#"} SIGN IN 
      %li
        %p.notice= notice
    / /.navbar-collapse
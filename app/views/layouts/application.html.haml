!!!
%html{:lang => "en"}
  %head
    = render 'layouts/head'
  %body
    %nav.navbar.navbar-default.navbar-fixed-top.topnav{:role => "navigation"}
      = yield :top_flash
      = render 'shared/navigation'

    = yield

    = render 'shared/footer'
    / pop up
    = render 'shared/login_signup'
    = insert_paloma_hook

:javascript
  $(document).ready(function(){
    $(".signup").hide();
    $(".sign").click(function(){
        $(".login").hide('slow');
        $(".signup").show('slow');
    });
    $(".log").click(function(){
        $(".login").show('slow');
        $(".signup").hide('slow');
    });
    $(".notice" ).fadeOut(4000);
  });

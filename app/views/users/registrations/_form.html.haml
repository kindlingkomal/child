= form_for resource, as: resource_name, url: registration_path(resource_name), remote: true, :html => {:class => 'signup', 'data-parsley-validate'=> true, id: 'signupForm'} do |f|
  .form-group
    - if resource.errors.any?
      #error_explanation
        .alert.alert-danger
          - resource.errors.full_messages.each do |msg|
            %button(type="button" class="close" data-dismiss="alert" aria-label="Close")
              %span(aria-hidden="true") &times;
            = msg
    = f.text_field :full_name, class: "infln", placeholder: "FULL NAME", required: true
    = f.text_field :phone_number, class: "inph", placeholder: "PHONE NUMBER", required: true
    = f.password_field :password, class: "inpw", placeholder: "PASSWORD", required: true
    = f.submit 'SIGN UP', class: "btn popbtn"
	
/ pop up
#sign-log.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.popbox{:role => "document"}
    .modal-content.brd0
      .modal-header
        %a.close{"aria-label" => "Close", "data-dismiss" => "modal", :href => "#", :type => "button"} &times;
      .modal-body.txtctr
        = image_tag 'logo-stv.png', :alt => "STV-logo"
        / Log-in
        = render partial: 'sessions/form', error: nil
        / / Sign up
        = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'signup'}) do |f|
          .form-group
            = f.text_field :full_name, class: "infln", placeholder: "FULL NAME"
            = f.text_field :phone_number, class: "inph", placeholder: "PHONE NUMBER"
            = f.password_field :password, class: "inpw", placeholder: "PASSWORD"
            = f.submit 'SIGN UP', class: "btn popbtn"
        .modal-footer.popfot
          .signup
            %span Already a User ?
            %a.log{:href => "#"} Login
            %span here
          .login
            %span New User ?
            %a.sign{:href => "#"} Sign up
            %span here

:javascript
  $(document).ready(function(){
      $(".signup").hide();
      $(".sign").click(function(){
          $(".login").hide('slow');
          $(".signup").show('slow');
      });
      $(".log").click(function(){
          $(".login").show('slow');
          $(".signup").hide('slow');
      });
  });

/ Signin and login togle script
:javascript
  $(document).ready(function(){
      $(".signup").hide();
      $(".sign").click(function(){
          $(".login").hide('slow');
          $(".signup").show('slow');
      });
      $(".log").click(function(){
          $(".login").show('slow');
          $(".signup").hide('slow');
      });
  });

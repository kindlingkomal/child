.container.sumpad
  .col-md-12
    .row
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        - if resource.errors.any?
          = render 'shared/alert_errors', resource: resource
        = f.hidden_field :reset_password_token
        .field
          = f.password_field :password, autofocus: true, autocomplete: "off", class: 'inad1', placeholder: 'New password'
        .field
          = f.password_field :password_confirmation, autocomplete: "off", class: 'inad1', placeholder: 'Confirm new password'
        .actions
          = f.submit "Change my password", class: 'btn popbtn text-uppercase'

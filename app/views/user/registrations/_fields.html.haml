.form-group
  - if resource.errors.any?
    #error_explanation
      = render 'shared/alert_errors', resource: resource

  = f.text_field :full_name, class: "infln", placeholder: "FULL NAME", required: true
  = f.text_field :phone_number, class: "inph phone_number", placeholder: "PHONE NUMBER", required: true, size: 10
  = f.password_field :password, class: "inpw", placeholder: "PASSWORD", required: true, 'data-parsley-minlength' => "6"
  .hide= f.file_field :avatar
  = f.submit 'SIGN UP', class: "btn popbtn"
